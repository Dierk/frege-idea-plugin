<idea-plugin version="2">
  <id>org.fregelang.plugin.idea</id>
  <name>Frege Plugin</name>
  <version>0.1</version>
  <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">The Frege Team</vendor>

  <description><![CDATA[
      Language support for the Frege programming language
    ]]></description>

  <change-notes><![CDATA[
      Initial version
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->

    <fileTypeFactory implementation="org.fregelang.plugin.idea.FregeFileTypeFactory"/>

    <lang.parserDefinition language="Frege" implementationClass="org.fregelang.plugin.idea.FregeParserDefinition"/>

    <lang.syntaxHighlighterFactory key="Frege" implementationClass="org.fregelang.plugin.idea.FregeSyntaxHighlighterFactory"/>

    <colorSettingsPage implementation="org.fregelang.plugin.idea.FregeColorSettingsPage"/>

    <lang.commenter language="Frege" implementationClass="org.fregelang.plugin.idea.FregeCommenter"/>

  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>